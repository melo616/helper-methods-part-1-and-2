<h1>New Director</h1>

<% @director.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %>
<% end %>

<%= form_with(model: @director, data: { turbo: false }) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :dob %>
    <%= form.date_field :dob %>
  </div>

  <div>
    <%= form.label :bio %>
    <%= form.text_field :bio %>
  </div>

  <%= form.button %>

<% end %>
